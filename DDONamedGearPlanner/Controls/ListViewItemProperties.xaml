<UserControl x:Class="DDONamedGearPlanner.ListViewItemProperties"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DDONamedGearPlanner"
             mc:Ignorable="d" 
             d:DesignHeight="450" Width="348">
	<ListView Name="lvDetails">
		<ListView.View>
			<GridView>
				<GridViewColumn Header="Property" Width="180">
					<GridViewColumn.CellTemplate>
						<DataTemplate>
							<TextBlock Text="{Binding Property}">
								<TextBlock.ToolTip>
									<TextBlock Text="{Binding Property}"/>
								</TextBlock.ToolTip>
								</TextBlock>
						</DataTemplate>
					</GridViewColumn.CellTemplate>
				</GridViewColumn>
				<GridViewColumn Header="Type" Width="90">
					<GridViewColumn.CellTemplate>
						<DataTemplate>
							<TextBlock Text="{Binding Type}">
								<TextBlock.ToolTip>
									<TextBlock Text="{Binding Type}"/>
								</TextBlock.ToolTip>
								</TextBlock>
						</DataTemplate>
					</GridViewColumn.CellTemplate>
				</GridViewColumn>
				<GridViewColumn Header="Value" Width="70" DisplayMemberBinding="{Binding Value}" />
			</GridView>
		</ListView.View>
	</ListView>
</UserControl>
