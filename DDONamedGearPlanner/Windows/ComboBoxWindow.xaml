<Window x:Class="DDONamedGearPlanner.ComboBoxWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DDONamedGearPlanner"
        mc:Ignorable="d"
        Title="Select " Height="85" Width="150" ResizeMode="NoResize" ShowInTaskbar="False" SizeToContent="Height" WindowStartupLocation="CenterOwner">
    <DockPanel>
		<Grid DockPanel.Dock="Bottom" Height="25" VerticalAlignment="Bottom">
			<Grid.ColumnDefinitions>
				<ColumnDefinition/>
				<ColumnDefinition/>
			</Grid.ColumnDefinitions>
			<Button Margin="5,2,5,3" Name="btnOK" Click="OK_Clicked" IsEnabled="False">OK</Button>
			<Button Grid.Column="1" Margin="5,2,5,3" Click="Cancel_Clicked">Cancel</Button>
		</Grid>
		<ComboBox Name="CB" Height="24" Margin="5,3,5,2" SelectionChanged="CB_SelectionChanged"/>
	</DockPanel>
</Window>
